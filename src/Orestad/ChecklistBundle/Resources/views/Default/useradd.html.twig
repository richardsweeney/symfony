{% extends "OrestadChecklistBundle::layout.html.twig" %}

{% block header %}
    <h1>Add a new user</h1>
{% endblock %}

{% block content %}
    <form action="{{ path('orestad_checklist_user_add') }}" method="post" {{ form_enctype(form) }}>
        {{ form_errors(form) }}

        {{ form_row(form.username) }}
        {{ form_row(form.email) }}
        {{ form_row(form.password) }}

        {{ form_rest(form) }}
        <input type="submit" value="send it!">
    </form>
{% endblock %}
